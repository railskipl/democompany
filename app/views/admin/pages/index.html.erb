<%= link_to  "Add Pages", new_admin_page_path %>
<% @pages.each do |page| %>
  <h3><%= page.title.html_safe %></h3>
  <p><%=page.body.html_safe %></p>
   <%= link_to "Edit", edit_admin_page_path(page) %>
    <%= link_to "Delete", admin_page_path(page), method: :delete, data: {confirm: "You sure?"} %>
  <% if page != @pages.last %>
  <hr />
  <% end %>
<% end %>